<%- include('../partials/header') %>

    <div class="container mt-3">
        <div class="container mt-3">
            <h1>Liste des ToDos</h1>
            <ul id="todos">
            </ul>
        </div>
    </div>

    <!-- Injecter les données todos dans une variable globale -->
    <script>
        window.todos = <%- JSON.stringify(todos || []) %>;
    </script>

    <!-- Boîte modale pour modifier un ToDo -->
    <div id="modalModify" class="modalModify" style="display: none;">
        <div class="modal-content-modify">
            <span class="close">&times;</span>
            <h2 id="modal-title-modify">Modify ToDo</h2>
            <form id="modal-form">
                <label for="todo-text">Text:</label>
                <input type="text" id="todo-tex-modify" name="text" required>
                <br><br>
                <label for="todo-checked">Completed:</label>
                <input type="checkbox" id="todo-checked" name="checked">
                <br><br>
                <button type="button" id="modal-save-modify">Modify</button>
                <button type="button" id="modal-cancel">Cancel</button>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>