<script>
  const dirtyHTML = `
    <div>
      <h1>Bienvenue !</h1>
      <script>alert('Malveillant');</script>
    </div>
  `;

  // D√©sinfecter le HTML
  const cleanHTML = DOMPurify.sanitize(dirtyHTML);

  // Ins√©rer dans le DOM
  document.getElementById('output').innerHTML = cleanHTML;
</script>


